<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about_Fragment"
    android:orientation="vertical">


   <ImageView
       android:layout_height="200dp"
       android:layout_width="200dp"
       android:src="@drawable/n1"
       android:id="@+id/n1"
       android:layout_row="0"
       android:layout_marginTop="50dp"
       android:layout_column="0"
       />

   <TextView
       android:layout_width="120dp"
       android:layout_height="50dp"
       android:layout_row="1"
       android:layout_column="0"
       android:text="The Station"
       android:textSize="20sp"
       android:textColor="@color/pink"
       android:textStyle="bold"
       android:layout_marginStart="30dp"
       android:id="@+id/t1" />
   <ImageView
       android:layout_height="200dp"
       android:layout_width="200dp"
       android:src="@drawable/n2"
       android:id="@+id/n2"
       android:layout_row="0"
       android:layout_column="1"
       android:layout_marginTop="50dp"
       />

   <TextView
       android:layout_width="120dp"
       android:layout_height="50dp"
       android:layout_row="1"
       android:layout_column="1"
       android:text="The Bus List"
       android:layout_marginTop="0dp"
       android:textSize="20sp"
       android:textColor="@color/pink"
       android:textStyle="bold"
       android:layout_marginStart="30dp"
       android:id="@+id/t2" />
   <ImageView
       android:layout_height="150dp"
       android:layout_width="200dp"
       android:src="@drawable/n3"
       android:id="@+id/n3"
       android:layout_row="2"
       android:layout_column="0"
       />

   <TextView
       android:id="@+id/t3"
       android:layout_width="wrap_content"
       android:layout_height="50sp"
       android:layout_row="3"
       android:layout_column="0"
       android:layout_marginStart="30dp"
       android:layout_marginTop="20dp"
       android:text="conductors List"
       android:textColor="@color/pink"
       android:textSize="20dp"
       android:textStyle="bold" />
   <ImageView
       android:layout_height="150dp"
       android:layout_width="200dp"
       android:src="@drawable/n4"
       android:id="@+id/n4"
       android:layout_row="2"
       android:layout_column="1"
       />

   <TextView
       android:id="@+id/t4"
       android:layout_width="165dp"
       android:layout_height="50sp"
       android:layout_row="3"
       android:layout_column="1"
       android:layout_marginStart="30dp"
       android:layout_marginTop="20dp"
       android:text="The  Depo List"
       android:textColor="@color/pink"
       android:textSize="20dp"
       android:textStyle="bold" />


</GridLayout>