<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".seats">



    <TextView
        android:id="@+id/tvSeatsAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24 seats available"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"/>

    <GridLayout
        android:id="@+id/seatGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="6"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:layout_marginTop="20dp">

        <!-- Row A -->
        <Button
            android:id="@+id/seatA1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="A1"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/seatA2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="A2"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/seatA3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="A3"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/seatA4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="A4"
            android:backgroundTint="@color/black"/>

        <!-- Row B -->
        <Button
            android:id="@+id/seatB1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="B1"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/seatB2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="B2"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/seatB3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="B3"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/seatB4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="B4"
            android:backgroundTint="@color/black"/>

        <!-- Row C -->
        <Button
            android:id="@+id/seatC1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="C1"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/seatC2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="C2"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/seatC3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="C3"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/seatC4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="C4"
            android:backgroundTint="@color/black"/>

        <!-- Row D -->
        <Button
            android:id="@+id/seatD1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="D1"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/seatD2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="D2"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/seatD3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="D3"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/seatD4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="D4"
            android:backgroundTint="@color/black"/>

        <!-- Row E -->
        <Button
            android:id="@+id/seatE1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="E1"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/seatE2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="E2"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/seatE3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="E3"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/seatE4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="E4"
            android:backgroundTint="@color/black"/>

        <!-- Row F -->
        <Button
            android:id="@+id/seatF1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="F1"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/seatF2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="F2"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/seatF3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="F3"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/seatF4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="F4"
            android:backgroundTint="@color/black"/>
    </GridLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:layout_marginTop="20dp"/>



</LinearLayout>